<% layout("/layouts/boilerplate") %>
<body class="font-sans antialiased bg-gray-50 text-gray-900">
   <!-- Hero Section -->
  <div class="relative w-full h-[70vh] flex items-center justify-center">
    <!-- Background Image -->
    <div 
      class="absolute inset-0 bg-cover bg-center brightness-50" 
      style="background-image: url('<%= listing.image.url %>')">
    </div>
    
    <!-- Overlay Text -->
    <div class="relative z-10 text-center text-white px-6">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 drop-shadow-lg">
        <%= listing.title %>
      </h1>
      <p class="text-lg md:text-xl font-medium drop-shadow">
        📍 <%= listing.location %>, <%= listing.country %>
      </p>
    </div>
  </div>

  <!-- Content Section -->
  <div class="max-w-6xl mx-auto px-6 lg:px-10 py-12 grid md:grid-cols-2 gap-10">
    
    <!-- Left: Hotel Image -->
    <div class="flex justify-center">
      <img 
        src="<%= listing.image.url %>" 
        alt="<%= listing.title %>" 
        class="rounded-3xl shadow-2xl w-full max-h-[450px] object-cover"
      />
    </div>

    <!-- Right: Hotel Details -->
    <div class="bg-white p-8 rounded-3xl shadow-xl border border-gray-100">
      <!-- Description -->
      <p class="text-gray-700 leading-relaxed mb-6">
        <%= listing.description %>
      </p>

      <!-- Price -->
      <div class="mb-6">
        <p class="text-3xl font-bold text-green-700 mb-1">
          <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
          <span class="text-lg text-gray-600 font-normal">/ night</span>
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-4">
        <!-- Book Now -->
        <a 
          href="/book/<%= listing._id %>" 
          class="flex-1 px-6 py-3 bg-gradient-to-r from-pink-500 to-red-500 text-white text-lg font-semibold rounded-xl shadow-lg hover:scale-105 transition-transform text-center"
        >
           Book Now
        </a>

        <!-- Edit -->
        <a 
          href="/listings/<%= listing._id %>/edit" 
          class="px-5 py-3 bg-blue-600 text-white rounded-xl shadow-md hover:bg-blue-700 transition"
        >
          ✏️ Edit
        </a>

        <!-- Delete -->
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
          <button 
            type="submit" 
            class="px-5 py-3 bg-red-600 text-white rounded-xl shadow-md hover:bg-red-700 transition"
          >
            🗑 Delete
          </button>
        </form>
      </div>
    </div>
  </div>

