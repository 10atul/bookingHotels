<% layout("/layouts/boilerplate") %>
<body>
  <div class="pt-23 md:max-w-6xl mx-auto">
    <h3 class="text-3xl font-semibold text-center mb-3">Edit this shit..</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
      <div class="px-10 grid grid-cols-6 gap-6">
        <div class="flex flex-col gap-1 col-start-1 col-end-7">
          <label for="title">Title</label>
          <input
            class="border px-2 py-3 rounded-md border-gray-400"
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
          />
        </div>
        <div class="flex flex-col gap-1 col-start-1 col-end-7">
          <label for="title">Description</label>
          <textarea
            class="border py-3 rounded-md border-gray-400"
            name="listing[description]"
          >
          <%= listing.description %>
          </textarea>
        </div>
        <div class="flex flex-col gap-1 col-start-1 col-end-7">
          <label for="title">Image URL</label>
          <input
            class="border px-2 py-3 rounded-md border-gray-400"
            type="text"
            name="listing[image.url]"
            value="<%= listing.image.url %>"
          />
        </div>
        <div
          class="flex flex-col gap-1 col-start-1 col-end-7 md:col-start-1 md:col-end-3"
        >
          <label for="title">Price</label>
          <input
            class="border px-2 py-3 rounded-md border-gray-400"
            type="number"
            name="listing[price]"
            value="<%= listing.price %>"
          />
        </div>
        <div
          class="flex flex-col gap-1 col-start-1 col-end-7 md:col-start-3 md:col-span-4"
        >
          <label for="title">Country</label>
          <input
            class="border px-2 py-3 rounded-md border-gray-400"
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
          />
        </div>
        <div class="flex flex-col gap-1 col-start-1 col-end-7">
          <label for="title">Location</label>
          <input
            class="border px-2 py-3 rounded-md border-gray-400"
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
          />
        </div>
      </div>
      <div class="px-10 mt-10 mb-10">
        <button
          class="bg-[#fe424d] text-white font-semibold texl-lg py-4 rounded-md w-full"
        >
          Edit
        </button>
      </div>
    </form>
  </div>
</body>
